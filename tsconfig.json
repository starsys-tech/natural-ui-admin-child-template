{
  "extends": "../../config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types/",
      "./types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "/#/*": [
        "types/*"
      ],
      "@root/*": [
        "../../*"
      ],
      "@common/*": [
        "../../common/*"
      ],
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/**/*.d.ts"
  ]
}
